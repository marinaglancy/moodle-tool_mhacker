{{!
    @template rb/column

    Reportbuilder column

    Example context (json):
    {
        "fielducfirst": "Name",
        "field": "name"
    }
}}

        // {{ fielducfirst }} column.
        $columns[] = (new column(
            '{{ field }}',
            new lang_string('{{ stringidentifier }}', '{{ component }}'),
            $this->get_entity_name()
        ))
            ->add_joins($this->get_joins())
            ->set_type(column::{{ columntype }})
            ->add_fields("{$tablealias}.{{ field }}")
{{#callback}}
            ->set_is_sortable({{#sortable}}true{{/sortable}}{{^sortable}}false{{/sortable}})
            ->add_callback({{{ . }}});
{{/callback}}
{{^callback}}
            ->set_is_sortable({{#sortable}}true{{/sortable}}{{^sortable}}false{{/sortable}});
{{/callback}}
